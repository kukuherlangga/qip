                            android:id="@+id/Ncs4col3"
                            android:onClick="cs4col3RadioBtn"
                            android:textSize="8dp"/>

                    </RadioGroup>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

