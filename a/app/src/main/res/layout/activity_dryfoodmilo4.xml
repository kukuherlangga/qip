                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N"
                            android:id="@+id/Ncs4col4"
                            android:onClick="cs4col4RadioBtn"
                            android:textSize="8dp"/>

                    </RadioGroup>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
